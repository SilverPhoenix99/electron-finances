    "version": "0.2.0",
    "configurations": [
        {
            "name": "React",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "react"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Electron",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "electron"],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Run App",
            "configurations": ["React", "Electron"]
        }
    ]
}